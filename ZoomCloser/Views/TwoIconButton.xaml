<UserControl x:Class="ZoomCloser.Views.TwoIconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZoomCloser.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Command="{Binding Command}"
            Height="20"
            Width="40"
            HorizontalAlignment="Left">
        <StackPanel>
            <iconPacks:PackIconBoxIcons Kind="{Binding TrueKind}"
                                        Visibility="{Binding Value, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <iconPacks:PackIconBoxIcons Kind="{Binding FalseKind}"
                                        Visibility="{Binding Value, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
        </StackPanel>
    </Button>
</UserControl>
