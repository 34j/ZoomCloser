<Window x:Class="ZoomCloserJp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:ZoomCloserJp.ViewModels" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:vm="clr-namespace:ZoomCloserJp.ViewModels"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="113" Width="373" Background="Black" Foreground="White" BorderBrush="Black" OpacityMask="Black">
    <Grid>
        <ContentControl prism:RegionManager.RegionName="ContentRegion"/>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding NumberDisplayText}" VerticalAlignment="Top" Height="37"/>
        <Button Content="退出" HorizontalAlignment="Left" Width="75" Margin="10,0,0,10" Command="{Binding CloseCommand}" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
